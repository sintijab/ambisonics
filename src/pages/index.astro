---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import "../styles/visualizer.css";
import "@fontsource/dm-serif-display";
import "@fontsource-variable/raleway";
import "@fontsource-variable/cabin";

const access_token = Astro.url.searchParams.get("access_token")! || "";
const refresh_token = Astro.url.searchParams.get("refresh_token")! || "";

if (access_token) {
  Astro.cookies.set("access_token", access_token);
  if (refresh_token) {
    Astro.cookies.set("refresh_token", refresh_token);
  }
  return Astro.redirect("/");
}
---

<Layout title="Welcome to Syntia's Audio Stereograph!">
  <div class="wrapper">
    <section class="main-controls" id="main_controls">
      <div class="intro">
        <div class="intro_descr">
          <h1>Syntia's</h1>
          <h2>Sound Stereogram</h2>
          <p>
            Discover sound music with digital audio visualizer, crossing two
            perspectives of calculated graph in 3d plot and AI generated
            visuals.
          </p>
          <p>
            Interface contains data points available to sound recorder sample
            via Media Stream Web API. Turn on microphone to maximize visual
            experience.
          </p>
          <!-- <a href="api/login">Authorize Spotify</a> -->
          <button class="custom-btn btn-purple" id="startStereogram" class="bt"
            >Play Sound Stereogram
          </button>
        </div>
        <Image
          src="/images/7c9a8524-8336-4724-8397-e3dad69df726_03.avif"
          alt="sound performance with piano"
          width={560}
          height={380}
          class="intro_img--bottom"
        />
        <Image
          src="/images/ce4d698a-2254-4ec3-bc03-12cb0a0575dd_02.avif"
          alt="sound performance with synth"
          width={460}
          height={300}
          class="intro_img--top"
        />
        <Image
          src="/images/ca0d29b3-6615-4477-8d7a-dc62856a2aaf_01.avif"
          alt="sound performance with multi channel audio record"
          width={760}
          height={580}
          class="intro_img--main"
        />
      </div>
    </section>
    <div class="controls" id="controls">
      <div class="main-title">
        <h1>
          <a rel="noopener noreferrer" href="https://syntia.org" target="_blank"
            >Syntia's</a
          >
        </h1>
        <p>Sound Stereogram</p>
      </div>
      <div class="canvas-btn" id="record-btn">
        <div class="record">
          <div class="record_btn btn-purple"></div>
        </div>
        <p>Start Recording</p>
      </div>
      <div class="canvas-btn" id="stop-record-btn">
        <div class="record">
          <div class="record_btn btn-purple stop_btn"></div>
        </div>
        <p>Stop Recording</p>
      </div>
    </div>
  </div>
  <canvas class="visualizer"></canvas>
  <video src="/images/01.mp4" controls={false}></video>
  <input type="checkbox" id="record" />
  <label for="record">
    <div class="time">
      <div class="h_m"></div>
      <div class="s_ms"></div>
    </div>
  </label>
  <section class="sound-clips"></section>
</Layout>
<script src="../scripts/visualizer.ts"></script>
<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: #ffffff;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>
